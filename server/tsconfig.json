{
  "compilerOptions": {
    /* ================= Runtime ================= */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",

    /* ================= Paths ================= */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ================= Safety ================= */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* ================= Interop ================= */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ================= Output ================= */
    "sourceMap": true,
    "declaration": false,

    /* ================= Clean Builds ================= */
    "noEmitOnError": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
